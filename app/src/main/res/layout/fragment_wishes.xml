<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/wishesScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_below="@+id/start_to_create_wish_image_view">
        <ListView
            android:id="@+id/wishesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop ="true"/>
    </ScrollView>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="+"
        android:id="@+id/start_to_create_wish_image_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/refresh_wish_image_view"
        android:layout_alignTop="@+id/start_to_create_wish_image_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/refresh"/>

</RelativeLayout>