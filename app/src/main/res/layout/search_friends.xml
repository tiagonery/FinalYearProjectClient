<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/search"
        android:id="@+id/search_friends_search_user_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add_facebook"
        android:layout_alignBottom="@+id/search_friends_search_user_imageView"
        android:layout_toLeftOf="@+id/search_friends_search_user_imageView"
        android:id="@+id/search_friend_EditText"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:id="@+id/friwnds_list_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_below="@+id/search_friends_search_user_imageView">
        <ListView
            android:id="@+id/search_friends_list_ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop ="true"/>
    </ScrollView>



</RelativeLayout>